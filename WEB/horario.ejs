<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Projeto Saude</title>
	<link rel="stylesheet" type="text/css" href="css/estilo.css">
</head>
<body #index>
	<div id="cabecalho">
		<div id="area-logo">
			<h1 class="logo">
				<a href="menuFuncionario">saúde</a>
			</h1>
		</div>
		<div id="area-menu">
			<ul>
				<li>
					<a href="prontuario">Prontuario</a> |
				</li>
				<li>
					<a href="horario">Horario</a>
				</li>
			</ul>
		</div>

		<div id="area-login">
			<ul>
				<li>
					<a href="start">Deslogar</a>
				</li>
				<div class="limpar"></div>
			</ul>
		</div>

		<div class="limpar"></div>
	</div>

		<div class="limpar"></div>
	</div>

	<div id="conteudo">
		<div id="bloco">
		    <% if (horarios && horarios.length > 0) { %>
		        <table border="1">
		            <thead>
		                <tr>
		                	<th>Paciente</th>
		                    <th>Hora de Início</th>
		                    <th>Hora de Término</th>
		                </tr>
		            </thead>
		            <tbody>
					    <% horarios.forEach(function(horario) { %>
					        <tr>
					        	<td>
					                <%= horario.nomePaciente %>
					            </td>
					            <td>
					                <% 
					                const horaInicio = new Date(horario.horarioInicio);
					                const horaInicioFormatada = horaInicio.toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'});
					                %>
					                <%= horaInicioFormatada %>
					            </td>
					            <td>
					                <% 
					                const horaFim = new Date(horario.horarioFim);
					                const horaFimFormatada = horaFim.toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'});
					                %>
					                <%= horaFimFormatada %>
					            </td>
					            
					        </tr>
					    <% }); %>
					</tbody>

		        </table>
		    <% } else { %>
		        <p>Não há horários disponíveis para hoje.</p>
		    <% } %>
		</div>

	</div>

	<div id="rodape">
		rodape
	</div>
</body>
</html>